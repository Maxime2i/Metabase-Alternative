# Database (used by API, migrations and seeder)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/clinic

# Optional: API port (default 3000)
# PORT=3000

# Required for natural language queries (POST /query with "question")
OPENAI_API_KEY=sk-...
# Optional: model (default gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini

# Optional: query timeout in ms (default 30000)
# QUERY_TIMEOUT_MS=30000
# Optional: max rows returned per request (default 1000)
# QUERY_MAX_ROWS=1000
